<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.smeleyka.myfilebox.client.Controller">

    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <TextField promptText="user" HBox.hgrow="ALWAYS" fx:id="textField"/>
            <Button text="LogIn" fx:id="loginButton" onAction="#loginAction"/>
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </HBox>
    </top>
    <center>
        <TextArea editable="false" promptText="TextArea" fx:id="textArea">

        </TextArea>
    </center>

    <bottom>
        <Button text="RECEIVE" fx:id="receiveButton" onAction="#recieveMessage"/>
        <Button text="SEND" fx:id="sendButton" onAction="#sendMessage"/>

    </bottom>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>


</BorderPane>
